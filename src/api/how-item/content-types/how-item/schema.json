{
  "kind": "collectionType",
  "collectionName": "how_items",
  "info": {
    "singularName": "how-item",
    "pluralName": "how-items",
    "displayName": "howItem"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fondo": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "titulo": {
      "type": "string",
      "maxLength": 50,
      "required": true
    },
    "descripcion": {
      "type": "text",
      "maxLength": 250,
      "required": true
    },
    "link": {
      "type": "component",
      "repeatable": false,
      "component": "utilidades.link"
    },
    "spriteName": {
      "type": "string",
      "required": true,
      "maxLength": 30
    },
    "order": {
      "type": "integer",
      "required": true,
      "unique": true
    }
  }
}
